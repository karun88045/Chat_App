<%= render 'shared/header' %>
    




<!-- <%= image_render2 %> -->
<div class="container h-100 p-5 shadow" style="width:100%;height:100vh;">
	<div class="row">
		<div class="col-md-12 col-12-lg col-sm-12">
			<h2 class="text-center">
			  <i class='fas fa-comment' style='font-size:100px;color:red'></i>
			</h2>
			<h4 class="text-center">Say Something...</h4>
		</div>

		<div class="container-fluid">
		  <div class="row">
			<div class="col-md-10 col-lg-10 col-sm-12">
	           <div class="form-group mb-3">
	             <textarea rows="15" cols="50" class="form-control">
Followers Activities:
	             	<%= render 'messages/message' %>
	             </textarea>
	           </div>
	           <div class="form-group mb-2">
				<%= form_with url:messages_path, method: :post do |form| %>
				<%= form.text_field:body, placeholder:"write message here...", class: "form-control mb-3" %>
				<br>
				<%= form.submit:Send, class: "mb-3 btn btn-primary" %>
				<% end %>
	           </div>				
			</div>
			<div class="col-md-2 col-lg-2 col-sm-12 bg-danger text-white" style=" height: 70vh;">
				<div class="">
				  <ul style="list-style:none;">
					  <li class="py-2"><a class="text-white" href="<%= root_path %>" style="text-decoration: none;">Home</a></li>
					  <li class="py-2"><a class="text-white" href="#" style="text-decoration: none;">Message</a></li>
					  <li class="py-2"><a class="text-white" href="#" style="text-decoration: none;">Friends</a></li>
				  </ul>
				</div>
			</div>
	      </div>
	    </div>
	</div>
</div>


<%= render 'shared/footer' %>
