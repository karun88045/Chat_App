<div class="container">
  <div class="row">
    <div class="col-md-6 col-lg-6 col-sm-12 mx-auto shadow-lg p-5">
      <h2 class="text-center">Signup Users</h2>
        <%= form_with model:@user, method: :post do |form| %>
        <div class="form-group py-2">
          <%= form.label :email, class: "mb-2" %>
          <%= form.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group py-2">
          <%= form.label :Password, class: "mb-2" %>
          <%= form.text_field :password, class: "form-control" %>
        </div>
        <div class="form-group py-2">
          <%= form.submit :Signup, class: "form-control btn btn-primary" %>
          <%= link_to 'Login', login_users_path,class: 'btn btn-secondary form-control mt-3' %>
        </div>
        <% end %>
    </div>
  </div>
</div>